$maybe msg <- loginMsg
  <br>
  <div .row>
    <div .col-12>
      <div .card>
        <div .card-header>
          Information
        <div .card-body #info>
          #{msg}

<div .row>
 <div .col-12 .col-md-4>
   <form method=post action=@{loginRoute} enctype=#{formEnctype}>
     ^{formWidget}
     $maybe tok <- mtok
       <input type=hidden name=#{defaultCsrfParamName} value=#{tok}>
     <button .btn .btn-primary type="submit">
       Login
       <span class="fas fa-sign-in-alt">
