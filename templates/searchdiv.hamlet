    $if null items
      <div .panel .panel-warning>
        <div .panel-heading>#{kindPlCap}
        <div .panel-body>
          No pictures have a #{kind} defined!
    $else
      <div .panel .panel-default>
        <div .panel-heading>
          <h3 .panel-title>
            <a href="@{ListItemsR atom}">
              <span .fa .fa-list>
              #{kindPlCap}
        <div .panel-body>
           $forall (p, c) <- items
            $with searchParams <- [(atomName atom, p)]
             <div .btn-group role="group">
               <a .btn .btn-default href="@?{(SearchFoldersR,searchParams)}">#{formatter p}
               <button type="button" .btn .btn-default .dropdown-toggle data-toggle="dropdown">
                 <span .caret>
               <ul .dropdown-menu role="menu">
                <li>
                  <a href="@?{(SearchFoldersR,searchParams)}">
                    <span .fa .fa-fw .fa-folder-o>
                    View folders
                <li>
                  <a href="@?{(SearchImagesR,searchParams)}">
                    <span .fa .fa-fw .fa-picture-o>
                    View the #{c} images
                <li role="separator" .divider>
                <li .disabled>
                  <a href="#">
                    <span .fa .fa-fw .fa-info>
                    View item details

