{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$esbuild-watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "esbuild: watch",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "clear": false
      }
    },
    {
      "type": "process",
      "isBackground": true,
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "command": "make",
      "args": ["fast-tests"],
      "label": "Watch haskell tests",
      "problemMatcher": {
        "owner": "external",
        "fileLocation": "autoDetect",
        "pattern": [
          {
            "regexp": "^  (.*):(\\d+):(\\d+):\\s*$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 0
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^corydalis> (build|test)",
          "endsPattern": "Press enter to force a rebuild."
        }
      }
    }
  ]
}
